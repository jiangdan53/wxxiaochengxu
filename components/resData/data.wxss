.box{
  width: 750rpx;
}
.tile{
  width: 100%;
}
.text{
  display: block;
  text-align: center;
  font-size: 60rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.text::after{
  content: '';
  display: block;
  width: 120rpx;
  height: 2rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  background-color: #236;
  margin-top: 20rpx;
}
.tite{
  display: block;
  width: 700rpx;
  font-size: 40rpx;
  color: #566;
  margin: 0 auto;
  font-weight: 800

}
.imgbox,.mosk{
  display: block;
  width: 90%;
  height: 600rpx;
  margin: auto;
  padding-top: 20rpx;
}
.mosk{
  background-color: rgba(247, 160, 160, 0.6);
  position: relative;
}
.bos{
  width: 40rpx;
  height: 40rpx;
  border: 10rpx solid #888;
  border-left-color: transparent;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  animation: alo 1s linear infinite
}
@keyframes alo {
  0%{
    transform: rotate(0deg)
  }
  100%{
    transform: rotate(360deg)
  }
}
