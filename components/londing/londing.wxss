.londig{
  position: relative;
  width: 60rpx;
  height: 60rpx;
}
.cile{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(0,0,0,.6);
  animation: run 2s infinite;
}
.ciles{
  animation-delay: -1s
}
@keyframes run {
  0%{
    transform: scale(0);
  }
  50%{
    transform: scale(1)
  }
  100%{
    transform: scale(0)
  }
}